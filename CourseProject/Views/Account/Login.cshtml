@model AccountLoginViewModel

@{
    ViewData["Title"] = "Login page";
}
<div class="container col-md-4 p-4 bg-white rounded border border-success">
    <div class="bg-success rounded-top text-white p-1">
        <h2 class="text-center">Login</h2>
    </div>
    <hr />
    <form method="post" asp-action="Login" class="list-group-item">
        <div class="form-group text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control shadow" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control shadow" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group mt-1 text-center">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </form>
    <div class="text-center list-group-item mt-3">
        <h5 class="">External logins</h5>
        <div class=" mt-2">
            @{
                if (Model.ExternalLogins.Count == 0)
                {
                    <div>No external logins</div>
                }
                else
                {
                    <form asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div>
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit" name="provider" value="@provider.Name" title="@provider.DisplayName" class="btn btn-primary">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>


