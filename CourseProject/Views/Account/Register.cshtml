@model AccountRegisterViewModel


@{
    ViewData["Title"] = "Register page";
}

<div class="container col-md-4 p-4 bg-white rounded border border-success">
    <div class="bg-success rounded-top text-white p-1">
        <h2 class="text-center">Register</h2>
    </div>
    <hr />
        <form method="post" class="list-group-item">
            <div class="form-group m-1">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control shadow" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control shadow" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control shadow" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control shadow" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-2 text-center">
                <input type="submit" class="btn btn-success" value="Register" />
            </div>
        </form>
</div>