@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
            <h5>Add or remove users from this role</h5>
        <div>
            <table class="table table-bordered">
                 <tr>
                     <th>Username</th>
                     <th>IsActive</th>
                     <th>Block</th>
                     <th>Unblock</th>
                     <th>Delete</th>
                 </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].UserId">
                            <input type="hidden" asp-for="@Model[i].UserName">
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label">
                                @Model[i].UserName
                                </label>
                            </div>
                        </td>
                        <td>Active</td>
                        <td>
                            <a class="btn btn-danger">Block</a>
                        </td>
                        <td>
                            <a class="btn btn-primary">Unblock</a>
                        </td>
                        <td>
                        <button asp-action="Delete" asp-route-id="@Model[i].UserId" asp-route-roleId="@roleId" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div>
            <input type="submit" value="Update" class="btn btn-primary" />
             <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary">Cancel</a>
        </div>
</form>