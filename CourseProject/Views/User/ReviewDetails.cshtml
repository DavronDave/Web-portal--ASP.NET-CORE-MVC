@model Review

@{
    ViewData["Title"] = "Review details";
}

<div class="card">
   <div class="card-header">
     <h3>@Model.Name</h3>
   </div>
   <div class="card-body">

   </div>
   <div class="card-footer">
        <div class="form-group">
            <label>Write your comment</label>
